@echo off
echo ===================================================
echo =        UniFortress - Шифрование USB диска       =
echo ===================================================
echo.
echo ВНИМАНИЕ! Этот скрипт нужно запускать от имени администратора!
echo.

REM Проверяем, передан ли номер диска
if "%1"=="" (
    echo Запуск без параметров. Будет показан список дисков.
    echo ---------------------------------------------------
    .\target\release\unifortress.exe list-devices
    echo ---------------------------------------------------
    
    set /p DISK_NUMBER=Введите номер диска для шифрования: 
) else (
    set DISK_NUMBER=%1
)

echo.
echo ВНИМАНИЕ: Будет зашифрован диск №%DISK_NUMBER%
echo.
echo ВСЕ ДАННЫЕ НА ДИСКЕ БУДУТ УНИЧТОЖЕНЫ!
echo.
set /p confirm=Продолжить шифрование? (y/n): 

if /i "%confirm%" NEQ "y" (
    echo Операция отменена.
    pause
    exit /b
)

echo.
echo Запускаем шифрование диска:
echo ---------------------------------------------------
.\target\release\unifortress.exe encrypt --device %DISK_NUMBER%
echo ---------------------------------------------------
echo.

echo Операция завершена.
pause 
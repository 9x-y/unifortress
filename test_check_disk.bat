@echo off
echo ===================================================
echo =          UniFortress - Проверка USB диска       =
echo ===================================================
echo.
echo ВНИМАНИЕ! Этот скрипт нужно запускать от имени администратора!
echo.

REM Проверяем, передан ли номер диска
if "%1"=="" (
    echo Запуск без параметров. Будет показан список дисков.
    echo ---------------------------------------------------
    .\target\release\unifortress.exe list-devices
    echo ---------------------------------------------------
    
    set /p DISK_NUMBER=Введите номер диска для проверки: 
) else (
    set DISK_NUMBER=%1
)

echo.
echo ВНИМАНИЕ: Будет проверен диск №%DISK_NUMBER%
echo.

set /p confirm=Продолжить проверку? (y/n): 

if /i "%confirm%" NEQ "y" (
    echo Операция отменена.
    pause
    exit /b
)

echo.
echo Запускаем проверку диска:
echo ---------------------------------------------------
.\target\release\unifortress.exe check --device %DISK_NUMBER%
echo ---------------------------------------------------
echo.

echo Проверка завершена.
pause 